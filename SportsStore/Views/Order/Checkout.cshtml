@model Order

<h2>Check out your information please</h2>
<p class="fw-semibold">Please enter your details and we'll ship your order right away</p>
<div asp-validation-summary="All" style="color:indianred"></div>

<form asp-action="Checkout" method="post">
  <h3>Ship to</h3>
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
  </div>
  <h3>Address</h3>
  <div class="form-group">
    <label asp-for="Line1"></label>
    <input asp-for="Line1" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Line2"></label>
    <input asp-for="Line2" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Line3"></label>
    <input asp-for="Line3" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="City"></label>
    <input asp-for="City" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="State"></label>
    <input asp-for="State" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Zip"></label>
    <input asp-for="Zip" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Country"></label>
    <input asp-for="Country" class="form-control" />
  </div>
  <h3>Options</h3>
  <div class="checkbox">
    <label>
      <input asp-for="GiftWrap" /> Wrap these order as a gift
    </label>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-dark">Complete Order</button>
  </div>
</form>